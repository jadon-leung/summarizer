{
    "manifest_version": 3,
    "version": "2.0",
    "description": "Sidebar extension to summarize text.",
    "name": "SummarizerGPT",

    "permissions": [
      "sidePanel",
      "contextMenus",
      "tabs",
      "scripting",
      "activeTab"
    ],
    "host_permissions":[
      "<all_urls>"
    ],
    
  
    
    "side_panel":{
      "default_path": "/src/sidebar.html",
      "default_icon": "/img/gpticon.png"
    },

    "action": {
        "default_title": "Click to open panel",
        "default_icon": "/img/gpticon.png"
    }

  

}
